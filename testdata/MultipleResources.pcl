resource my_nginx_svcService "kubernetes:core/v1:Service" {
apiVersion = "v1"
kind = "Service"
metadata = {
name = "my-nginx-svc"
labels = {
app = "nginx"
}
}
spec = {
type = "LoadBalancer"
ports = [
{
port = 80
}
]
selector = {
app = "nginx"
}
}
}
resource my_nginxDeployment "kubernetes:apps/v1:Deployment" {
apiVersion = "apps/v1"
kind = "Deployment"
metadata = {
name = "my-nginx"
labels = {
app = "nginx"
}
}
spec = {
replicas = 3
selector = {
matchLabels = {
app = "nginx"
}
}
template = {
metadata = {
labels = {
app = "nginx"
}
}
spec = {
containers = [
{
name = "nginx"
image = "nginx:1.14.2"
ports = [
{
containerPort = 80
}
]
}
]
}
}
}
}
